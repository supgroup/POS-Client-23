                            <ToolTip x:Name="tt_count" Content="Customers Count"
                                              Placement="left" 
                                              HorizontalOffset="35"
                                              PlacementRectangle="50,25,0,0"
                                              VerticalOffset="-20"/>
                        </TextBlock.ToolTip>
                    </TextBlock>

                </StackPanel >
                </Border>
            </Border>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
        <!--Right section-->
        <!--#region -->

        <Border Grid.Column="1" Background="White" Margin="0,15,10,15" CornerRadius="7"  Width="auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <!--Bank Button-->
                <!--#region-->
                <Border CornerRadius="7,7,0,0"
                        Grid.Row="0"
                        BorderBrush="{x:Null}"
                        Background="#4E4E4E">
                    <Button Height="52" Background="{x:Null}" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  Height="52" HorizontalAlignment="Center" >
                            <Path Fill="White"  HorizontalAlignment="Center"   Width="22" Height="22"
                                  Data="{StaticResource bank}"/>
                            <TextBlock Text="Bank" x:Name="txt_bank" Foreground="White" VerticalAlignment="Center" Grid.Column="1"  Margin="5"/>
                        </StackPanel>
                    </Button>
                </Border>
                <!--#endregion-->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="grid_bank" >
                        <Grid.RowDefinitions >
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>


                        </Grid.RowDefinitions>



                        <!--Base Information-->
                        <!--#region -->

                        <DockPanel LastChildFill="True" Grid.Row="1">
                            <TextBlock x:Name="txt_baseInformation" Text="Base Infomation" Foreground="#737373" FontSize="10" VerticalAlignment="Center" Margin="5,5,5,5"/>
                            <Button DockPanel.Dock="Right" x:Name="btn_clear" Grid.Row="1" Grid.Column="2" Padding="0" Background="{x:Null}" BorderBrush="{x:Null}" Click="Btn_clear_Click" Margin="5,1" ToolTip="clear" TabIndex="13">
                                <materialDesign:PackIcon Foreground="#178DD2" Kind="RefreshCircle" HorizontalAlignment="Center" Grid.Column="0" VerticalAlignment="Center" Width="30" Height="30">
                                    <materialDesign:PackIcon.ToolTip>
                                        <ToolTip x:Name="tt_clear" Content="clear" Placement="left" HorizontalOffset="5" PlacementRectangle="50,0,0,0" VerticalOffset="20"/>
                                    </materialDesign:PackIcon.ToolTip>
                                </materialDesign:PackIcon>
                            </Button>
                            <Separator Background="#999999" VerticalAlignment="Center" Width="auto" />
                        </DockPanel>
                        <!--#endregion-->

                        <!--Bank Name-->
                        <!--#region -->
                        <TextBox x:Name="tb_name" 
                         Grid.Row="2" 
                         Text="{Binding name, Mode=OneWay}" 
                         Padding="10,0,5,0"  TabIndex="0" 
                         BorderThickness="0,0,0,2"    
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         materialDesign:HintAssist.Hint="Bank Name..."  
                         Foreground="#4E4E4E"  TextBlock.FontSize="12" 
                         Background="#f8f8f8" BorderBrush="AliceBlue" 
                         TextChanged="Tb_name_TextChanged" LostFocus="Tb_name_LostFocus"  
                         MaxLength="50" 
                         materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}" 
                         Height="40"  Margin="10,5,10,5"  >
                          
                        </TextBox>
                        <Path Grid.Row="2" Fill="#E81123" Stretch="Fill" Margin="5,5,15,5" x:Name="p_errorName"  HorizontalAlignment="Right"  Grid.Column="2" Visibility="Collapsed" VerticalAlignment="Center" Width="15"  Height="15" Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 ZM12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                            <Path.ToolTip>
                                <ToolTip  x:Name="tt_errorName"  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                            </Path.ToolTip>
                        </Path>
                        <!--#endregion-->

                        <!--Account Number-->
                        <!--#region -->
                        <TextBox Grid.Row="3" x:Name="tb_accNumber"
                         Text="{Binding accNumber, Mode=OneWay}"   
                         Padding="10,0,5,0"   TabIndex="1"  BorderThickness="0,0,0,2"  
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Account Number..." 
                         Foreground="#4E4E4E"  TextBlock.FontSize="12" 
                         Background="#f8f8f8"  PreviewTextInput="NumberValidationTextBox"   
                         BorderBrush="AliceBlue"   TextChanged="Tb_accNum_TextChanged" 
                         LostFocus="Tb_accNum_LostFocus"   MaxLength="20" materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                         Height="40" Margin="10,5,10,5"  PreviewKeyDown="Tb_accNumber_PreviewKeyDown" >
                        </TextBox>
                        <Path Grid.Row="3" Fill="#E81123" Stretch="Fill" Margin="5,5,15,5" x:Name="p_errorAccNum" HorizontalAlignment="Right"  Grid.Column="2"  Visibility="Collapsed"  VerticalAlignment="Center" Width="15"  Height="15"   Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2ZM12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17Z">
                            <Path.ToolTip>
                                <ToolTip  x:Name="tt_errorAccNum"  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                            </Path.ToolTip>
                        </Path>
                        <!--#endregion-->

                        <!--More Information-->
                        <!--#region -->
                        <DockPanel LastChildFill="True" Grid.Row="4">
                            <TextBlock  Text="More Information" Foreground="#737373"  FontSize="10" VerticalAlignment="Center" x:Name="txt_moreInformation" Margin="5"/>
                            <Separator Background="#999999"  Margin="5"  VerticalAlignment="Center" />
                        </DockPanel>
                        <!--#endregion-->

                        <!--Mobile-->
                        <!--#region -->
                        <Grid  Grid.Row="5" Margin="5,0,5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" x:Name="cb_area" Padding="10,10,5,0"   TextBlock.Foreground="#4E4E4E" TabIndex="3"  TextBlock.FontSize="12" Margin="5,5,0,5" VerticalAlignment="Center"   Height="40" Width="60" Background="#f8f8f8"   BorderBrush="#737373"      BorderThickness="0"  FontFamily="{StaticResource Font-cairo-light}"    Grid.Row="0" SelectionChanged="Cb_area_SelectionChanged" />
                            <TextBox x:Name="tb_mobile" IsEnabled="False" Grid.Column="1" Style="{StaticResource MaterialDesignFloatingHintTextBox}" HorizontalAlignment="Stretch" Text="{Binding mobile, Mode=OneWay}" Padding="10,0,5,0"  TabIndex="4"  BorderThickness="0,0,0,2" materialDesign:HintAssist.Hint="Mobile..."   Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8" BorderBrush="AliceBlue" MaxLength="9" PreviewTextInput="NumberValidationTextBox"  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}" Height="40"   Margin="5"  PreviewKeyDown="Tb_mobile_PreviewKeyDown"  >
                            </TextBox>
                            <Path Fill="#E81123" Stretch="Fill" Grid.Column="1" DockPanel.Dock="Right" x:Name="p_errorMobile"   HorizontalAlignment="Right" Visibility="Collapsed"   VerticalAlignment="Center" Width="15"  Height="15" Margin="5,5,15,5" Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17L11,17 L11,15 L13,15 L13,17 Z">
                                <Path.ToolTip>
                                    <ToolTip x:Name="tt_errorMobile" Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                </Path.ToolTip>
                            </Path>
                        </Grid>
                        <!--#endregion-->

                        <!--Phone-->
                        <!--#region -->
                        <Grid   Grid.Row="6" Margin="5,0,5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="cb_areaPhone" Padding="10,10,5,0"  TextBlock.Foreground="#4E4E4E"
                                      Grid.Column="0" 
                                      TextBlock.FontSize="12" Margin="5,5,0,5"
                                      VerticalAlignment="Center" 
                                      Height="40" Width="60"  
                                      Background="#f8f8f8" TabIndex="5"
                                      BorderBrush="#737373" BorderThickness="0"
                                      FontFamily="{StaticResource Font-cairo-light}"   
                                      SelectionChanged="Cb_areaPhone_SelectionChanged" />
                            <ComboBox x:Name="cb_areaPhoneLocal" Padding="10,10,5,0" 
                                      TextBlock.Foreground="#4E4E4E" Visibility="Collapsed"
                                      SelectedIndex="0" TabIndex="6"
                                      TextBlock.FontSize="12" Margin="5,5,5,5"
                                      VerticalAlignment="Center" 
                                      Height="40" Width="50"  Grid.Column="1"
                                      Background="#f8f8f8" 
                                      BorderBrush="#737373"       BorderThickness="0" 
                                      FontFamily="{StaticResource Font-cairo-light}" SelectionChanged="Cb_areaPhoneLocal_SelectionChanged" />

                            
                            <TextBox x:Name="tb_phone" IsEnabled="False"  Text="{Binding phone, Mode=OneWay}" Grid.Column="2"  
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Padding="10,0,5,0"    TabIndex="7"
                                     BorderThickness="0,0,0,2" materialDesign:HintAssist.Hint="Phone..."    
                                     Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8"
                                     BorderBrush="AliceBlue" PreviewTextInput="NumberValidationTextBox"
                                     materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                     VerticalAlignment="Center" MaxLength="15"
                                     HorizontalAlignment="Stretch"
                                     Height="40" Margin="5,5,5,5" >
                            </TextBox>
                            <Path Fill="#E81123" Stretch="Fill" Margin="5,5,15,5" x:Name="p_errorPhone"
                                  HorizontalAlignment="Right"  Grid.Column="2"  Visibility="Collapsed"  
                                  VerticalAlignment="Center" Width="15"  Height="15"
                                  Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                                <Path.ToolTip>
                                    <ToolTip  x:Name="tt_errorPhone"  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                </Path.ToolTip>
                            </Path>
                        </Grid>
                        <!--#endregion-->

                        <!--Address-->
                        <!--#region -->
                        <TextBox Grid.Row="7" x:Name="tb_address"  Text="{Binding address, Mode=OneWay}" 
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Padding="10,0,5,5" Margin="10,5,10,5"  TabIndex="8" TextWrapping="Wrap"
                                     BorderThickness="0,0,0,2" materialDesign:HintAssist.Hint="Address..."    
                                     Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8"
                                     BorderBrush="AliceBlue" VerticalAlignment="Center" MaxLength="100" MinHeight="40" materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                     HorizontalAlignment="Stretch" >
                        </TextBox>
                        <Path Fill="#E81123" Stretch="Fill" Margin="5,5,15,5"
                              HorizontalAlignment="Right"  Visibility="Collapsed" 
                         VerticalAlignment="Center" Width="15"  Height="15"
                              Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                            <Path.ToolTip>
                                <ToolTip  x:Name="tt_error_address"  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                            </Path.ToolTip>
                        </Path>
                        <!--#endregion-->

                        <!--Note-->
                        <!--#region -->
                        <TextBox x:Name="tb_notes" Grid.Row="8" Text="{Binding notes, Mode=OneWay}" 
                                 Padding="10,0,5,5"   TabIndex="9" Margin="10,5,10,5"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 BorderThickness="0,0,0,2" materialDesign:HintAssist.Hint="Note..."    
                                 Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8" 
                                 BorderBrush="AliceBlue"  TextWrapping="Wrap" AcceptsReturn="True"
                                 HorizontalAlignment="Stretch" VerticalAlignment="Center"  
                                 materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                 MinHeight="70"  Grid.ColumnSpan="2" >
                        </TextBox>
                        <Path Fill="#E81123" Stretch="Fill" Margin="15,12,15,5"
                              HorizontalAlignment="Right"  Grid.Column="2"  Visibility="Collapsed"  
                         VerticalAlignment="Top" Width="15"  Height="15"
                              Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                            <Path.ToolTip>
                                <ToolTip x:Name="tt_error_note" Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                            </Path.ToolTip>
                        </Path>
                        <!--#endregion-->

                        <!--Seprator-->
                        <!--#region -->
               
                        <!--#endregion-->

                        <!--Buttons-->
                        <!--#region -->

                        <!--#endregion-->
                    </Grid>
                </ScrollViewer>
                <Grid Grid.Row="11" Margin="5,5,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Border>
                   
                    <Button x:Name="btn_add" TabIndex="10"
                          Background="#4E4E4E" BorderBrush="{x:Null}"
                    Margin="1,1" Click="Btn_add_Click" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Name="txt_add_Icon" Kind="PlusThick" VerticalAlignment="Center" Width="15"  Height="15" Margin="0,1,2,0">
                              
                            </materialDesign:PackIcon>
                            <TextBlock Visibility="Collapsed" Name="txt_addButton" Text="Add" VerticalAlignment="Center">

                            </TextBlock>

                        </StackPanel>
                    </Button>
                        <Border.ToolTip>
                            <ToolTip x:Name="tt_add_Button" Content="Add"
                                    Placement="left" 
                                    HorizontalOffset="15"
                                    PlacementRectangle="50,0,0,0"
                                    VerticalOffset="30"/>
                        </Border.ToolTip>
                    </Border>
                    <Border Grid.Column="1">
                        <Button x:Name="btn_update"  TabIndex="11"
                        Background="#4E4E4E" BorderBrush="{x:Null}"
                   Margin="1,1"  Click="Btn_update_Click" >
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Name="txt_update_Icon" Kind="Edit" VerticalAlignment="Center" Width="15" Height="15" Margin="0,1,2,0">

                                </materialDesign:PackIcon>
                                <TextBlock Visibility="Collapsed" Name="txt_updateButton" Text="Update" VerticalAlignment="Center">

                                </TextBlock>

                            </StackPanel>
                        </Button>
                        <Border.ToolTip>

                            <ToolTip x:Name="tt_update_Button" Content="Update"
                                    Placement="left" 
                                    HorizontalOffset="15"
                                    PlacementRectangle="50,0,0,0"
                                    VerticalOffset="30"/>

                        </Border.ToolTip>
                    </Border>
                    <Border Grid.Column="2">
                        <Button x:Name="btn_delete"  TabIndex="12"
                        Background="#4E4E4E" BorderBrush="{x:Null}"
                    Margin="1,1"  Click="Btn_delete_Click" >
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                                <materialDesign:PackIcon Name="txt_delete_Icon" Kind="Delete" VerticalAlignment="Center" Width="15" Height="15" Margin="0,1,2,0">

                                </materialDesign:PackIcon>
                                <TextBlock Visibility="Collapsed" Name="txt_deleteButton" Width="auto" Text="Delete" VerticalAlignment="Center">

                                </TextBlock>
                            </StackPanel>
                        </Button>
                        <Border.ToolTip>
                            <ToolTip x:Name="tt_delete_Button" Content="delete"
                                    Placement="left" 
                                    HorizontalOffset="15"
                                    PlacementRectangle="50,0,0,0"
                                    VerticalOffset="30"/>
                        </Border.ToolTip>
                    </Border>
                </Grid>
            </Grid>

        </Border>

        <!--#endregion-->
    </Grid>
</UserControl>
