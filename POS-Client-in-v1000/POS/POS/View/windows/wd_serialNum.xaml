<Window x:Class="POS.View.windows.wd_serialNum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS.View.windows"
        mc:Ignorable="d" KeyDown="HandleKeyPress"
        Title="SC Commerce"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Margin="0"
         Height="500" Width="800" Background="Transparent" AllowsTransparency="True" 
        Loaded="Window_Loaded">
    <Grid Grid.Column="1" Grid.Row="1"   x:Name="grid_serialNum">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid  >
            <Border  BorderThickness="0" Grid.Row="0" 
                    CornerRadius="7,7,0,0"  Background="{x:Null}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition x:Name="col_props" Width="*"/>
                        <ColumnDefinition x:Name="col_serial" Width="*"/>
                        <!--<ColumnDefinition Width="35"/>-->
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0"  
                            BorderThickness="1 1 0 1"  Height="auto" 
                            materialDesign:ButtonAssist.CornerRadius="7 0 0 0"
                            materialDesign:ShadowAssist.ShadowDepth="Depth0"
                            BorderBrush="{StaticResource MainColorlightGrey}"
                            Background="{StaticResource White}"
                            x:Name="btn_itemInfo" 
                            Click="Btn_tab_Click">
                        <Grid  HorizontalAlignment="Center"  >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1.2*"/>
                            </Grid.ColumnDefinitions>
                            <Path x:Name="path_itemInfo" Fill="{StaticResource Grey}" Stretch="Fill" Margin="5,0"
                              HorizontalAlignment="Right" Grid.Column="0"  
                         VerticalAlignment="Center" Width="15" Height="15"
                              Data="{StaticResource features}"/>
                            <TextBlock Text="item" x:Name="txt_itemTitle" Foreground="{StaticResource Grey}"
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                              Grid.Column="1"      Margin="5,0"/>
                        </Grid>
                    </Button>
                    <Button Grid.Column="1"  
                            BorderThickness="1 1 0 1"  Height="auto" 
                            materialDesign:ButtonAssist.CornerRadius="0 0 0 0"
                            materialDesign:ShadowAssist.ShadowDepth="Depth0"
                            BorderBrush="{StaticResource MainColorlightGrey}"
                            Background="{StaticResource LightGrey}"
                           x:Name="btn_properties" 
                            Click="Btn_tab_Click">
                        <Grid  HorizontalAlignment="Center"  >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1.2*"/>
                            </Grid.ColumnDefinitions>
                            <Path x:Name="path_properties" Fill="{StaticResource MainColorlightGrey}" Stretch="Fill" Margin="5,0"
                              HorizontalAlignment="Right" Grid.Column="0"  
                         VerticalAlignment="Center" Width="15" Height="15"
                              Data="{StaticResource properties}"/>
                            <TextBlock Text="Properties" x:Name="txt_properties" Foreground="{StaticResource MainColorlightGrey}"
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                              Grid.Column="1"      Margin="5,0"/>
                        </Grid>
                    </Button>
                    <Button Grid.Column="2"  
                            BorderThickness="0 1 1 1" Height="auto" 
                            materialDesign:ButtonAssist.CornerRadius="0 7 0 0"
                             materialDesign:ShadowAssist.ShadowDepth="Depth0"
                            BorderBrush="{StaticResource MainColorlightGrey}"
                            Background="{StaticResource LightGrey}"
                            x:Name="btn_serialInfo" 
                            Click="Btn_tab_Click">
                    <Grid Grid.Column="1"  HorizontalAlignment="Center"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>
                            <Path x:Name="path_serialInfo" Fill="{StaticResource MainColorlightGrey}" Stretch="Fill" Margin="5,0"
                              HorizontalAlignment="Right" Grid.Column="0"  
                         VerticalAlignment="Center" Width="15" Height="15"
                              Data="{StaticResource serials}"/>
                            <TextBlock Text="Serial Number" x:Name="txt_serialTitle" Foreground="{StaticResource MainColorlightGrey}"
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                              Grid.Column="1"      Margin="5,0"/>
                    </Grid>
                </Button>
                    
                    <Button Grid.ColumnSpan="3"  IsCancel="true"  HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="{x:Null}"  materialDesign:ButtonAssist.CornerRadius="45"
                             BorderBrush="{x:Null}"   Padding="0"
                            Foreground="White" Margin="7.5,0"  x:Name="btn_colse" Click="Btn_colse_Click"
                             FontWeight="SemiBold" Width="24"   FontSize="14">
                        <Border Height="20" Width="20" CornerRadius="45"
                               BorderBrush="{StaticResource LightGrey}"  BorderThickness="1"
                               Background="White"  
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Foreground="{StaticResource LightGrey}" 
                              x:Name="icon_close" Kind="Close" Margin="0 0 0 0"
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                               Width="15" Height="15"/>
                        </Border>
                    </Button>
        </Grid>
        </Border>
        </Grid>
        <Border x:Name="brd_ItemInfo" Visibility="Visible"
            BorderThickness="1,0,1,1"  Grid.Row="1"
                    CornerRadius="0,0,7,7" BorderBrush="#999999"  Background="White">
            <Grid x:Name="grid_itemMainGrid"   Margin="5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="220"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DockPanel LastChildFill="True" Grid.Row="0">
                    <TextBlock x:Name="txt_baseInformation" Text="baseInformation" Foreground="#737373" FontSize="10" VerticalAlignment="Center" Margin="5,5,5,5"/>
                    <Separator Background="#999999" VerticalAlignment="Center" Width="auto" />
                </DockPanel>


                <Grid Grid.Row="1" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="65"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                               x:Name="txt_itemCodeTitle" Text="code:"
                               Foreground="{StaticResource MainColor}" Margin="10"
                               FontWeight="Medium"
                            />
                    <TextBlock
                        Grid.Column="1"
                               x:Name="txt_itemCode" Text="-"
                               Foreground="#8C8C8C" Margin="0 10 10 10"
                               />


                    <TextBlock 
                        Grid.Row="0" Grid.Column="2"
                               x:Name="txt_itemNameTitle" Text="name:"
                               Foreground="{StaticResource MainColor}" Margin="10"
                               FontWeight="Medium"
                            />
                    <TextBlock
                     Grid.Row="0"   Grid.Column="3"
                               x:Name="txt_itemName" Text="-"
                               Foreground="#8C8C8C" Margin="0 10 10 10"
                               />
 


                    <TextBlock 
                        Grid.Row="1" 
                               x:Name="txt_itemDetailsTitle" Text="details:"
                               Foreground="{StaticResource MainColor}" Margin="10"
                               FontWeight="Medium"
                            />
                    <TextBlock 
                     Grid.Row="1"   Grid.Column="1" Grid.ColumnSpan="3"
                           x:Name="txt_itemDetails" Text="-"
                           TextWrapping="Wrap"
                            HorizontalAlignment="Left"   
                           Foreground="#8C8C8C" Margin="0 10 10 10"
                           />

                    <DockPanel LastChildFill="True" Grid.Row="3" Grid.ColumnSpan="2">
                        <TextBlock x:Name="txt_offer" Text="offer" Foreground="#737373" FontSize="10" VerticalAlignment="Center" Margin="5,5,5,5"/>
                        <Separator Background="#999999" VerticalAlignment="Center" Width="auto" />
                    </DockPanel>

                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               x:Name="txt_offerNameTitle" Text="name:"
                               Foreground="{StaticResource MainColor}" Margin="10"
                               FontWeight="Medium"
                            />
                    <TextBlock
                       Grid.Row="4" Grid.Column="1"
                               x:Name="txt_offerName" Text="-"
                               Foreground="#8C8C8C" Margin="0 10 10 10"
                               />

                    <TextBlock Grid.Row="5" Grid.Column="0" 
                               x:Name="txt_offerDescriptionTitle" Text="description:"
                               Foreground="{StaticResource MainColor}" Margin="10"
                               FontWeight="Medium"
                            />
                    <TextBlock
                       Grid.Row="5" Grid.Column="1"
                               x:Name="txt_offerDescription" Text="-"
                               Foreground="#8C8C8C" Margin="0 10 10 10"
                               />


                    <DockPanel LastChildFill="True" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2">
                        <TextBlock x:Name="txt_warranty" Text="warranty" Foreground="#737373" FontSize="10" VerticalAlignment="Center" Margin="5,5,5,5"/>
                        <Separator Background="#999999" VerticalAlignment="Center" Width="auto" />
                    </DockPanel>

                    <TextBlock Grid.Row="4" Grid.Column="2" 
                               x:Name="txt_warrantyNameTitle" Text="period:"
                               Foreground="{StaticResource MainColor}" Margin="10"
                               FontWeight="Medium"
                            />
                    <TextBlock
                       Grid.Row="4" Grid.Column="3"
                               x:Name="txt_warrantyName" Text="-"
                               Foreground="#8C8C8C" Margin="0 10 10 10"
                               />

                    <TextBlock Grid.Row="5" Grid.Column="2" 
                               x:Name="txt_warrantyDescriptionTitle" Text="description:"
                               Foreground="{StaticResource MainColor}" Margin="10"
                               FontWeight="Medium"
                            />
                    <TextBlock
                       Grid.Row="5" Grid.Column="3"
                               x:Name="txt_warrantyDescription" Text="-"
                               Foreground="#8C8C8C" Margin="0 10 10 10"
                               />
                </Grid>

                <Grid x:Name="grid_package"  Grid.Row="2" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DockPanel LastChildFill="True" Grid.Row="0">
                        <TextBlock x:Name="txt_packageItem" Text="package item" Foreground="#737373" FontSize="10" VerticalAlignment="Center" Margin="5,5,5,5"/>
                        <Separator Background="#999999" VerticalAlignment="Center" Width="auto" />
                    </DockPanel>
                    <Border x:Name="brd_itemsPackage"
                        Grid.Row="2" Grid.Column="2"  
                            Grid.RowSpan="3"
                         Margin="10 10 10 10"
                        BorderThickness="1" BorderBrush="{StaticResource MainColorlightGrey}">
                        <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  Margin=" 5 0">
                            <StackPanel x:Name="sp_itemsPackage" Grid.Row="1" />
                        </ScrollViewer>
                    </Border>
                    <TextBlock 
                     Grid.Row="1"   Grid.Column="1" Grid.ColumnSpan="3"
                           x:Name="txt_notPackageType" Visibility="Collapsed"
                        Text="this item not a package type!"
                             HorizontalAlignment="Center"   
                             VerticalAlignment="Center"   
                        FontWeight="Medium" FontSize="14"
                           Foreground="#8C8C8C" Margin="0 10 10 10"
                           />
                </Grid>
            </Grid>
        </Border>
        <Border x:Name="brd_properties" Visibility="Collapsed"
            BorderThickness="1,0,1,1"  Grid.Row="1"
                    CornerRadius="0,0,7,7" BorderBrush="#999999"  Background="White">
            <Grid x:Name="grid_propertiesMainGrid"  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="dg_items1" 
                      Grid.Row="0"  Margin="10,10,10,5" Background="White"
                      materialDesign:DataGridAssist.CornerRadius="5" 
                         IsReadOnly="True" CanUserAddRows="False" 
                        AutoGenerateColumns="False" 
                        ColumnWidth="SizeToHeader" SelectionChanged="Dg_items1_SelectionChanged" 
                                  AlternatingRowBackground="#f3f3f3" AlternationCount="2">
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"></SolidColorBrush>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#e7f3fa" />
                            <Setter Property="BorderBrush" Value="White"/>
                            <Setter Property="BorderThickness" Value="0 0 1 0"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                         <DataGridTextColumn Width="3*" x:Name="col_itemName1"  Header="name" >
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0}-{1}">
                                    <Binding Path="name"></Binding>
                                    <Binding Path="unitName"></Binding>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="2*" x:Name="col_itemCount1"  Header="itemCount" Binding="{Binding Path=itemCount}"/>
                        <DataGridTemplateColumn Width="35" Header="" x:Name="col_activate1" IsReadOnly="True" >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Path  Stretch="Fill" FlowDirection="LeftToRight"
                                                HorizontalAlignment="Center" Grid.Column="0"  
                                               VerticalAlignment="Center" Width="20" Height="20"
                                               Margin="-10 0" >
                                        <Path.Style>
                                            <Style TargetType="{x:Type Path}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding validProperty}" Value="false">
                                                        <Setter Property="Fill" Value="{StaticResource MainColorRed}"/>
                                                        <Setter Property="Data" Value="{StaticResource infoCircle}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding validProperty}" Value="true">
                                                        <Setter Property="Fill" Value="{StaticResource MainColor}"/>
                                                        <Setter Property="Data" Value="{StaticResource checkCircle}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                    <Separator Grid.Row="1"
                               Background="{StaticResource MainColorlightGrey}" VerticalAlignment="Center"
                               Width="auto" Margin="10 0 10 0" />
                    <TextBlock x:Name="txt_propertiesHint" Grid.Row="2"
                               Text="* properties" 
                               Foreground="{StaticResource MainColor}" 
                               VerticalAlignment="Center" Margin="10,5,5,10"/>
                </Grid>

                <Border Grid.RowSpan="4" Grid.Column="1" 
                        BorderBrush="{StaticResource LightGrey}" BorderThickness="1,0,0,0"
                        Margin="5 15" />
                <!--<Separator Margin="5,0" Grid.Row="1"  Background="#DFDFDF" VerticalAlignment="Center" Width="auto" />-->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid x:Name="grid_minUnitProperties" Grid.Row="1">
                        <ComboBox x:Name="cb_minUnitProperties"   
                                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                        Padding="10,0,5,0" TextBlock.Foreground="#4E4E4E"
                                        materialDesign:HintAssist.Hint="Select Unit"  
                                         Height="40"   Margin="10,5,10,5"
                                        Background="#f8f8f8" 
                                        SelectionChanged="Cb_minUnitProperties_SelectionChanged"
                                        BorderBrush="#737373" BorderThickness="0" KeyUp="Cb_minUnitProperties_KeyUp"  />
                        <Path x:Name="p_errorMinUnitProperties" Fill="#E81123" Stretch="Fill" Margin="5,5,15,5"
