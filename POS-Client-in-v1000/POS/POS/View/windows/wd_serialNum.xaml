                            <Path.ToolTip>
                                <ToolTip x:Name="tt_errorMinUnitProperties" Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                            </Path.ToolTip>
                        </Path>

                    </Grid>
                    <Grid x:Name="grid_itemProps" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="cb_itemProps"    Grid.Column="0"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                  Padding="10,0,5,0" TextBlock.Foreground="#4E4E4E"
                                  materialDesign:HintAssist.Hint="properties"  
                                  Height="40"   Margin="10,5,10,5"
                                  Background="#f8f8f8" 
                                  BorderBrush="#737373" BorderThickness="0" 
                                   KeyUp="Cb_itemsProps_KeyUp"
                                  IsTextSearchEnabled ="False"
                                  IsEditable="True"
                                  StaysOpenOnEdit="true"
                                  SelectionChanged="Cb_itemProps_SelectionChanged"/>
