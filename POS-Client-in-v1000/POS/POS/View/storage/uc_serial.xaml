                           materialDesign:DataGridAssist.CornerRadius="5" 
                           x:Name="dg_itemUnit"
                           AutoGenerateColumns="False" 
                           ColumnWidth="SizeToHeader"   
                           AlternatingRowBackground="#f3f3f3" AlternationCount="2" 
                           SelectionChanged="Dg_itemUnit_SelectionChanged">
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"></SolidColorBrush>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#e7f3fa" />
                            <Setter Property="BorderBrush" Value="White"/>
                            <Setter Property="BorderThickness" Value="0 0 1 0"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*"   Header="itemName"  >
                            <DataGridTextColumn.Binding>
                                <MultiBinding  StringFormat="{}{0} - {1}">
                                    <Binding Path="itemName" />
                                    <Binding Path="unitName" />
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="*"   Header="quantity in stock"     Binding="{Binding Path=quantity}"/>
                        <DataGridTextColumn Width="*"   Header="properties count" >
                            <DataGridTextColumn.Binding >
                                <MultiBinding Converter="{StaticResource propertiesCountConverter}" >
                                    <Binding Path="itemType" />
                                    <Binding Path="PropertiesCount" />
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="*"   Header="serials count"     >
                            <DataGridTextColumn.Binding >
                                <MultiBinding Converter="{StaticResource serialsCountConverter}" >
                                    <Binding Path="itemType" />
                                    <Binding Path="serialsCount" />
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
