<UserControl x:Class="POS.View.reports.uc_saleItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS.View.reports"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:POS.converters"
             mc:Ignorable="d" Tag="saleItems"
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid Margin="0,15,15,15" x:Name="grid_main">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="auto" ></ColumnDefinition>
            <ColumnDefinition x:Name="col_reportChart" Width="1*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>

                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>


            <Grid Margin="5,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Border CornerRadius="7,7,0,0"  Height="52"
                        Grid.Row="0" Margin="0,0,5,0"
                        BorderBrush="{x:Null}"
                        Background="#4E4E4E">
                    <Grid x:Name="grid_tabControl">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>

                        </Grid.ColumnDefinitions>
                        <Border x:Name="bdr_items" Visibility="Visible" Grid.Column="0" Background="White" BorderThickness="0"  Height="40" Width="60" VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="10,5,0,-1">
                            <Button x:Name="btn_items"  Background="Transparent"  Tag="items"
                                    materialDesign:RippleAssist.Feedback="Transparent" Click="btn_items_Click"
                                    BorderBrush="Transparent" Height="auto" Width="60">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                <Path Fill="#4e4e4e" Stretch="Fill"  VerticalAlignment="Top" Margin="0,-1,0,0" HorizontalAlignment="Center"
                                 Width="25" Height="25"   x:Name="path_items" FlowDirection="LeftToRight"
                                         Data="{StaticResource Items}"  >
                                    <Path.ToolTip>
                                        <ToolTip x:Name="tt_items" Content="Items"
                                              Placement="left" 
                                              HorizontalOffset="35"
                                              PlacementRectangle="50,0,0,0"
                                              VerticalOffset="-10"/>
                                    </Path.ToolTip>
                                </Path>
                            </Button>
                        </Border>
                        <Border x:Name="bdr_collect"  Visibility="Visible"  Grid.Column="1" Background="#4E4E4E" BorderThickness="0"  Height="40" Width="60" VerticalAlignment="Bottom" CornerRadius="7,7,0,0" BorderBrush="Transparent" Margin="0,5,0,-1">
                            <Button x:Name="btn_collect"  Background="Transparent"  Tag="bestselling"
                                    materialDesign:RippleAssist.Feedback="Transparent" Click="Btn_collect_Click"
                                    BorderBrush="Transparent" Height="auto">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                        Storyboard.TargetName="bdrMain"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                                <Path Fill="White" Stretch="Fill"  VerticalAlignment="Top" Margin="0,-1,0,0" HorizontalAlignment="Center"
                                 Width="25" Height="25"   x:Name="path_collect" FlowDirection="LeftToRight"
                                         Data="{StaticResource increaseChart}"  >
                                    <Path.ToolTip>
                                        <ToolTip x:Name="tt_collect" Content="Best Selling"
                                              Placement="left" 
                                              HorizontalOffset="35"
                                              PlacementRectangle="50,0,0,0"
                                              VerticalOffset="-10"/>
                                    </Path.ToolTip>
                                </Path>
                            </Button>
                        </Border>


                        <Border Grid.Column="10" CornerRadius="7" >
                            <TextBlock  x:Name="txt_tabTitle"  Foreground="White"   Grid.Column="10" 
                              VerticalAlignment="Center"      FontSize="16"     Margin="5 5 10 5"/>
                        </Border>
                    </Grid>
                </Border>

                <Border CornerRadius="0,0,7,7" 
                        Grid.Row="1" Margin="0,0,5,10"
                        BorderBrush="{x:Null}"
                        Background="White" Height="auto">
                    <Border BorderThickness="15,0,15,0"  x:Name="bdrMain" Height="auto" Background="Transparent">
                        <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" >
                            <Grid x:Name="grid_father">
                                <Grid Grid.Row="1" x:Name="grid_items" Margin="10,0,10,10"  Visibility="Visible">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>

                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>  
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="1.5*" MinWidth="200"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox SelectionChanged="Cb_ItemsBranches_SelectionChanged" Name="cb_ItemsBranches"  Grid.Row="0"
                                     Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      materialDesign:HintAssist.Hint="Branches ...."
                                    Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8"  BorderBrush="#737373" BorderThickness="0"  
                                    Height="40" Margin="10,5,10,5" Padding="10,0,5,0" KeyUp="Cb_ItemsBranches_KeyUp" ></ComboBox>
                                    <CheckBox  Background="{StaticResource MainColorBlue}" x:Name="chk_allBranchesItem" Checked="Chk_allBranchesItem_Checked" Unchecked="Chk_allBranchesItem_Unchecked" Grid.Row="0" Grid.Column="1" Content="All" Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"></CheckBox>
                                    <ComboBox Grid.Row="1" Grid.Column="2" SelectionChanged="cb_Items_SelectionChanged" Name="cb_Items" 
                                     Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      materialDesign:HintAssist.Hint="Item ...."
                                    Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8"  BorderBrush="#737373" BorderThickness="0"  
                                    Height="40" Margin="10,5,10,5" Padding="10,0,5,0" KeyUp="Cb_Items_KeyUp" ></ComboBox>
                                    <CheckBox Grid.Row="1" Grid.Column="3" 
                                              Background="{StaticResource MainColorBlue}" x:Name="chk_allItems" Checked="Chk_allItems_Checked" Unchecked="Chk_allItems_Unchecked"   Content="All" Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"></CheckBox>


                                    <DockPanel  Grid.Column="4" HorizontalAlignment="Right" LastChildFill="False">
                                        <CheckBox x:Name="chk_itemInvoice"   
                                                          Background="{StaticResource MainColorBlue}"
                                                          Content="Invoice"
                                                          Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"
                                                          Checked="chk_Checked" Unchecked="chk_Checked"/>
                                        <CheckBox x:Name="chk_itemReturn"  
                                                          Background="{StaticResource MainColorBlue}"
                                                          Content="Returned"
                                                          Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"
                                                          Checked="chk_Checked" Unchecked="chk_Checked"/>
                                        <!--<CheckBox x:Name="chk_itemInvoice" Content="Invoice" Margin="10,5,10,5" Foreground="{StaticResource MainColorGrey}" Checked="chk_Checked" Unchecked="chk_Checked"></CheckBox>-->
                                        <!--<CheckBox x:Name="chk_itemReturn" Content="Return invoice" Margin="5" Foreground="{StaticResource MainColorGrey}" Checked="chk_Checked" Unchecked="chk_Checked"></CheckBox>-->
                                        <CheckBox x:Name="chk_itemDrafs" Visibility="Collapsed"></CheckBox>
                                    </DockPanel>
                                   
                                    <ComboBox  Name="cb_Types" 
                                               Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                               materialDesign:HintAssist.Hint="Item Type...."
                                               Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8" 
                                                BorderBrush="#737373" BorderThickness="0"  
                                               Height="40" Margin="10,5,10,5" Padding="10,0,5,0" Grid.Row="1" SelectionChanged="Cb_Types_SelectionChanged" />
                                    <CheckBox  Background="{StaticResource MainColorBlue}" x:Name="chk_allTypes" Grid.Row="1" Grid.Column="1" Content="All" Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}" Checked="Chk_allTypes_Checked" Unchecked="Chk_allTypes_Unchecked"></CheckBox>


                                    <DockPanel  Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="4" HorizontalAlignment="Right" LastChildFill="False">
                                        <DatePicker SelectedDateFormat="Short"  Name="dp_ItemEndDate" Width="100" Margin="10,5,0,5" Padding="10,0,5,0" Height="40" DockPanel.Dock="Right" SelectedDateChanged="dp_SelectedDateChanged" BorderBrush="#737373"  BorderThickness="0" 
                                       Style="{StaticResource MaterialDesignFloatingHintDatePicker}"  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                materialDesign:HintAssist.Hint="End Date..."></DatePicker>
                                        <DatePicker SelectedDateFormat="Short" SelectedDateChanged="dp_SelectedDateChanged" Name="dp_ItemStartDate" Width="100" Margin="10,5,10,5" Padding="10,0,5,0" Height="40" DockPanel.Dock="Right"    BorderBrush="#737373"  BorderThickness="0" 
                                       Style="{StaticResource MaterialDesignFloatingHintDatePicker}"  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                materialDesign:HintAssist.Hint="Start date..."  ></DatePicker>
                                        <materialDesign:TimePicker Visibility="Collapsed" SelectedTimeChanged="dt_SelectedTimeChanged" Name="dt_ItemEndTime" Margin="10,5,10,5" Padding="10,0,5,0" Height="40" Width="100" DockPanel.Dock="Right"  BorderBrush="#737373"  BorderThickness="0" 
                                       Style="{StaticResource MaterialDesignFloatingHintTimePicker}"  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                materialDesign:HintAssist.Hint="End time..."/>
                                        <materialDesign:TimePicker Visibility="Collapsed" SelectedTimeChanged="dt_SelectedTimeChanged" Name="dt_itemStartTime" Margin="10,5,10,5" Padding="10,0,5,0" Height="40"  Width="100" MinWidth="100" DockPanel.Dock="Right" BorderBrush="#737373"  BorderThickness="0" 
                                       Style="{StaticResource MaterialDesignFloatingHintTimePicker}"  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                materialDesign:HintAssist.Hint="Start time..."/>

                                    </DockPanel>


                                </Grid>
                                <Grid MinHeight="100" Grid.Row="1" x:Name="grid_collect" Margin="10,0,10,10"  Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>

                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="1.5*" MinWidth="200"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <DockPanel LastChildFill="False" Grid.Row="1" Grid.Column="2">
                                        <DatePicker SelectedDateFormat="Short" Grid.Row="1" Grid.Column="2" Name="dp_collectEndDate" Width="100" Margin="10,5,10,5" Padding="10,0,5,0" Height="40" DockPanel.Dock="Right" SelectedDateChanged="Dp_colletSelectedDateChanged" BorderBrush="#737373"  BorderThickness="0" 
                                       Style="{StaticResource MaterialDesignFloatingHintDatePicker}"  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                materialDesign:HintAssist.Hint="End Date..."></DatePicker>
                                        <DatePicker SelectedDateFormat="Short"  SelectedDateChanged="Dp_colletSelectedDateChanged" Name="dp_collectStartDate" Width="100" Margin="10,5,10,5" Padding="10,0,5,0" Height="40" DockPanel.Dock="Right"    BorderBrush="#737373"  BorderThickness="0" 
                                       Style="{StaticResource MaterialDesignFloatingHintDatePicker}"  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                materialDesign:HintAssist.Hint="Start date..."  ></DatePicker>
                                    </DockPanel>

                                    <ComboBox SelectionChanged="Cb_collect_SelectionChanged" Name="cb_collect" 
                                     Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      materialDesign:HintAssist.Hint="Branch ...."
                                    Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8"  BorderBrush="#737373" BorderThickness="0"  
                                    Height="40" Margin="10,5,10,5" Padding="10,0,5,0" Grid.Row="1" KeyUp="Cb_collect_KeyUp"></ComboBox>
                                    <CheckBox  Background="{StaticResource MainColorBlue}" x:Name="chk_allcollect" Checked="Chk_allcollect_Checked" Unchecked="Chk_allcollect_Unchecked" Grid.Row="1" Grid.Column="1" Content="All" Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"></CheckBox>


                                </Grid>
                            </Grid>

                        </ScrollViewer>
                    </Border>
                </Border>
            </Grid>
            <Border Grid.Row="1" Background="White" CornerRadius="7,7,0,0"  Margin="5,0,5,0">
                <Border BorderThickness="0,0,0,1" BorderBrush="#FFC8C8C8" Margin="5,0,5,0">
                    <DockPanel  LastChildFill="False">



                        <TextBox x:Name="txt_search"  TextChanged="txt_search_TextChanged"
                        Padding="10,0,5,0" BorderBrush="{x:Null}"
                                           Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                          materialDesign:HintAssist.Hint="Enter Here To Start Search ...."  
                 Foreground="#4e4e4e" TextBlock.FontSize="14"
                    Height="40"
                 />
