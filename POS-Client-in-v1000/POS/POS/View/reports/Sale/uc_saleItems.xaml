                    </DockPanel>
                </Border>
            </Border>

            <Border Grid.Row="2" Background="White"   Margin="5,0,5,0">
                <DataGrid  Margin="5,4,5,18"  IsReadOnly="True"  Background="White"
                     Name="dgInvoice"  
                        AutoGenerateColumns="False" 
                        ColumnWidth="SizeToHeader"
                            AlternatingRowBackground="#f3f3f3" AlternationCount="2">
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"></SolidColorBrush>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#e7f3fa" />
                            <Setter Property="BorderBrush" Value="White"/>
                            <Setter Property="BorderThickness" Value="0 0 1 0"/>
                        </Style>
                        <converters:invoiceTypeConverter x:Key="invoiceTypeConverter"/>
                        <converters:discountTypeConverter x:Key="discountTypeConverter"/>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn x:Name="col_number" Width="*" Header="No." Binding="{Binding invNumber}" />
                        <DataGridTextColumn x:Name="col_date"   Width="*" Header="Date" Binding="{Binding updateDate,Converter={StaticResource dateFrameConverter }}" />
                        <DataGridTextColumn x:Name="col_branch" Width="*" Header="Branch" Binding="{Binding branchCreatorName}" />
                        <DataGridTextColumn x:Name="col_item"   Width="*" Header="Item" Binding="{Binding ITitemName}" />
                        <DataGridTextColumn x:Name="col_unit"   Width="*" Header="Unit" Binding="{Binding ITunitName}" />
                        <DataGridTextColumn x:Name="col_type"   Width="*" Header="Type" Binding="{Binding ITtype , Converter={StaticResource itemTypeConverter}}" />
                        <DataGridTextColumn x:Name="col_itQuantity" Width="*" Header="QTY" Binding="{Binding ITquantity}" />
                        <DataGridTextColumn x:Name="col_price"  Width="*" Header="Price" Binding="{Binding ITprice,Converter={StaticResource accuracyConverter}}" />
                        <DataGridTextColumn x:Name="col_total"  Width="*" Header="Total" Binding="{Binding subTotal ,Converter={StaticResource accuracyConverter}}"/>
                        <DataGridTextColumn x:Name="col_invCount" Width="*" Header="Invoices" Binding="{Binding count}" Visibility="Collapsed"/>
                        <DataGridTextColumn x:Name="col_avg"    Width="*" Header="Items/Invoice" Binding="{Binding itemAvg,Converter={StaticResource accuracyConverter}}" Visibility="Collapsed"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            <Border Grid.Row="4" Margin="5,0,5,0" Background="White" CornerRadius="0,0,7,7" >
                <DockPanel LastChildFill="False">
                    <Border BorderThickness="0,0,0,1" BorderBrush="#178DD2" Margin="10,0,10,10" Width="auto" HorizontalAlignment="Left">
                        <StackPanel  Orientation="Horizontal" >

                            <Button x:Name="btn_pdf"   Background="{x:Null}"   Margin="10,0,5,-1"
                          Padding="0" Height="Auto" 
                          BorderBrush="{x:Null}" Click="Btn_pdf_Click" >
                                <materialDesign:PackIcon Foreground="#D20A0A" Kind="FilePdf"  
                                
                          Width="22" Height="22">
                                    <materialDesign:PackIcon.ToolTip>
                                        <ToolTip x:Name="tt_report" Content="Report"
                                              Placement="left" 
                                              HorizontalOffset="5"
                                              PlacementRectangle="50,0,0,0"
                                              VerticalOffset="-10"/>
                                    </materialDesign:PackIcon.ToolTip>
                                </materialDesign:PackIcon>
                            </Button>
                            <Button   Background="{x:Null}"    Margin="5,0,5,0"
                          Padding="0" Height="35"  x:Name="btn_print"
                          BorderBrush="{x:Null}" Click="Btn_print_Click" >
                                <materialDesign:PackIcon Foreground="#313131" Kind="Printer"  
                              HorizontalAlignment="Center" 
                      Width="22" Height="22">
                                    <materialDesign:PackIcon.ToolTip>
                                        <ToolTip x:Name="tt_print" Content="Print"
                                              Placement="left" 
                                              HorizontalOffset="5"
                                              PlacementRectangle="50,0,0,0"
                                              VerticalOffset="-10"/>
                                    </materialDesign:PackIcon.ToolTip>
                                </materialDesign:PackIcon>
                            </Button>
