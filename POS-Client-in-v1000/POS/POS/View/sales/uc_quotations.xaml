                                    Height="40"   Margin="10,5,10,5" 
                                    BorderBrush="#737373" BorderThickness="0">
                        </ComboBox>
                        <Separator Margin="5,2.5" Grid.Row="3"  Background="#DFDFDF" VerticalAlignment="Center" Width="auto" />
                        <!--#region  Customer-->
