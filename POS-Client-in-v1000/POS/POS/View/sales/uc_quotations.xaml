                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" >
                                        <dotNetKitControls:AutoCompleteComboBox   
                                        x:Name="cb_coupon" Padding="10,5,5,5"  Grid.Column="0"
