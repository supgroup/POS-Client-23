                                                FontWeight="Bold" FontSize="12"  
                                       HorizontalAlignment="Left" Margin="0,5,5,5"/>
                            </Expander.Header>
                            <Grid   Margin="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="1" >
                                    <TextBox x:Name="tb_discount"  Text="{Binding discountValue, Mode=OneWay}" Padding="10,0,5,0"
                                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                            BorderThickness="1"  materialDesign:HintAssist.Hint="Discount..."  
                                            Foreground="#4E4E4E"  TextBlock.FontSize="12" Background="#f8f8f8"
                                            BorderBrush="#f8f8f8"
                                            PreviewTextInput="DecimalValidationTextBox"  PreviewKeyDown="space_PreviewKeyDown"
                                               Height="40"  
                                             TextChanged="tb_discount_TextChanged"/>


                                    <Path Fill="#E81123" Stretch="Fill" Margin="5,5,25,5"
                              HorizontalAlignment="Right" Grid.Column="2"  Visibility="Collapsed"   
                         VerticalAlignment="Center" Width="15"  Height="15"
                              Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                                        <Path.ToolTip>
                                            <ToolTip  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                        </Path.ToolTip>
                                    </Path>
                                </Grid>

                                <Grid   Grid.Row="2"  Grid.Column="0"  Margin="5"  >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="cb_typeDiscount" Padding="10,0,5,0"  TextBlock.Foreground="#4E4E4E"  
                                           Text="{Binding test, Mode=OneWay}" 
                                 materialDesign:HintAssist.Hint="type discount..." 
                                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                               TextBlock.FontSize="12" 
                                  Height="40"  
                                      Background="#f8f8f8" 
                               BorderBrush="#737373"       BorderThickness="0" 
                                FontFamily="Segoe UI"   
                                 Grid.Row="0" SelectionChanged="Cb_typeDiscount_SelectionChanged"   />
                                    <Path Fill="#E81123" Stretch="Fill" Margin="5,5,22,5"
                                  HorizontalAlignment="Right" Grid.Column="0"  Visibility="Collapsed" 
                             VerticalAlignment="Center" Width="15"  Height="15"
                                  Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                                        <Path.ToolTip>
                                            <ToolTip    Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                        </Path.ToolTip>
                                    </Path>

                                </Grid>
                            </Grid>
                        </Expander>
