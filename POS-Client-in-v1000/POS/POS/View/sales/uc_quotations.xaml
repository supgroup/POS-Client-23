                                          L13,15 L13,17 Z">
                                            <Path.ToolTip>
                                                <ToolTip   x:Name="tt_errorCustomer"
                                                     Content="Name Not Validate"  
                                                     Style="{StaticResource ToolTipError}"/>
                                            </Path.ToolTip>
                                        </Path>

                                    </Grid>
                                    <Button Grid.Column="1"  Padding="0" Width="25"  
                                Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Right" x:Name="btn_updateCustomer" Click="Btn_updateCustomer_Click"
                                Margin="5,1" IsEnabled="False">
                                        <materialDesign:PackIcon Foreground="#4E4E4E" Kind="FileDocumentEdit"  
                                  HorizontalAlignment="Center" Grid.Column="0"   
                             VerticalAlignment="Center" Width="30" Height="30"/>
                                    </Button>
                                    <Button x:Name="btn_clearCustomer" Grid.Row="1" Grid.Column="2" Padding="0"
                                Background="{x:Null}" BorderBrush="{x:Null}" Click="Btn_clearCustomer_Click"
                                Margin="5,1"   ToolTip="clear">
                                        <materialDesign:PackIcon Foreground="#178DD2" Kind="RefreshCircle"  
                                HorizontalAlignment="Center" Grid.Column="0"  
                                VerticalAlignment="Center" Width="30" Height="30"/>
                                    </Button>

                                </Grid>
                                <Grid Grid.Row="3" >
                                    <TextBox MinHeight="70" MaxHeight="70" x:Name="tb_note"  Text="{Binding notes, Mode=OneWay}"
                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}" Height="40"
                                      Grid.Row="2" Padding="10,0,5,0"  
                                      materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                      BorderThickness="1"  materialDesign:HintAssist.Hint="Note..."  
                                      Foreground="#4E4E4E" TextBlock.FontSize="12" Background="#f8f8f8"
                                      BorderBrush="#f8f8f8" TextChanged="Tb_textBox_TextChanged"
                                      Grid.Column="1" Margin="5,5" TextWrapping="Wrap"/>
                                    <Path Fill="#E81123" Stretch="Fill" Margin="5,5,15,5"
                              HorizontalAlignment="Right" Grid.Column="2"  Visibility="Collapsed"   
