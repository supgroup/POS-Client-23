                                                <Path.ToolTip>
                                                    <ToolTip  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                                </Path.ToolTip>
                                            </Path>
                                        </Grid>
                                        <Button Grid.Column="1" x:Name="btn_clearCoupon"  Padding="0" HorizontalAlignment="Right"
                                        Background="{x:Null}" BorderBrush="{x:Null}" 
                                        Margin="5,1" ToolTip="clear" Click="Btn_clearCoupon_Click">
